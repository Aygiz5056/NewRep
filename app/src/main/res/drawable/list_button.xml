<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="false">
        <shape
            android:shape="rectangle">
            <solid
                android:color="#E60808"/>
            <corners
                android:radius="10dp"/>
            <size
                android:height="70dp"
                android:width="250dp"/>
            <stroke
                android:width="3dp"
                android:color="#FFFFFF"
                android:dashGap="0dp"
                android:dashWidth="10dp"/>

        </shape>
    </item>

    <item
        android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <solid
                android:color="#671414"/>
            <corners
                android:radius="10dp"/>
            <size
                android:height="70dp"
                android:width="250dp"/>
            <stroke
                android:width="3dp"
                android:color="#FFFFFF"
                android:dashGap="0dp"
                android:dashWidth="10dp"/>

        </shape>
    </item>
</selector>